<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/main.css">
    <title>Edit LEGO Set - <%= set.name %></title>
</head>
<body>
    <%- include('partials/navbar', {page: ''}) %>

    <div class="container mx-auto px-4">
        <div class="hero ">
            <div class="hero-content text-center">
                <div class="max-w-md">
                    <h1 class="text-3xl font-bold">Edit Set - <%= set.name %></h1>
                    <form action="/lego/editSet" method="POST" class="mt-4">
                        <input type="hidden" name="set_num" value="<%= set.set_num %>">
                        <div class="form-control">
                            <label for="name" class="label">Name</label>
                            <input type="text" id="name" name="name" class="input input-bordered" value="<%= set.name %>" required>
                        </div>
                        <div class="form-control">
                            <label for="year" class="label">Year</label>
                            <input type="number" id="year" name="year" class="input input-bordered" value="<%= set.year %>" required>
                        </div>
                        <div class="form-control">
                            <label for="num_parts" class="label">Number of Parts</label>
                            <input type="number" id="num_parts" name="num_parts" class="input input-bordered" value="<%= set.num_parts %>" required>
                        </div>
                        <div class="form-control">
                            <label for="theme_id" class="label">Theme</label>
                            <select id="theme_id" name="theme_id" class="select select-bordered" required>
                                <% themes.forEach(theme => { %>
                                    <option value="<%= theme.id %>" <%= (set.theme_id == theme.id) ? "selected" : "" %>><%= theme.name %></option>
                                <% }) %>
                            </select>
                        </div>
                        <div class="form-control mt-4">
                            <a href="/lego/deleteSet/<%= set.set_num %>" class="btn mb-5 btn-error" onclick="return confirm('Are you sure you want to delete this set?');">Delete Set</a>
                            <button type="submit" class="btn btn-primary">Update Set</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
